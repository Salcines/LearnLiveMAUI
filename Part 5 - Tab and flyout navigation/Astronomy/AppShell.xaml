<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Astronomy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:properties="clr-namespace:Astronomy.Resources.Languages"
    xmlns:local="clr-namespace:Astronomy.Pages">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
            <Image Source="moon.png"/>
        </Grid>
    </Shell.FlyoutHeader>

	<FlyoutItem Title="{x:Static properties:MoonPhase.Title_Page}"
            Icon="moon.png">
    <ShellContent
        ContentTemplate="{DataTemplate local:MoonPhasePage}"/>
    </FlyoutItem>

    <FlyoutItem Title="{x:Static properties:Sunrise.Title_Page}"
                Icon="sun.png">
        <ShellContent
	        ContentTemplate="{DataTemplate local:SunrisePage}"/>
    </FlyoutItem>

    <FlyoutItem Title="{x:Static properties:About.Title_Page}"
                Icon="question.png">
        <ShellContent
	        ContentTemplate="{DataTemplate local:AboutPage}"/>
    </FlyoutItem>
</Shell>

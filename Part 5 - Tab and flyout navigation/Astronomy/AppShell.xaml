<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Astronomy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:properties="clr-namespace:Astronomy.Resources.Languages"
    xmlns:local="clr-namespace:Astronomy.Pages">

    <TabBar>
        <Tab Title="{x:Static properties:MoonPhase.Title_Page}"
             Icon="moon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MoonPhasePage}"/>
        </Tab>

		<Tab Title="{x:Static properties:Sunrise.Title_Page}"
		     Icon="sun.png">
            <ShellContent ContentTemplate="{DataTemplate local:SunrisePage}"/>
		</Tab>
    </TabBar>
</Shell>
